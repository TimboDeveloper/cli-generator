{
    "compilerOptions": {
        "experimentalDecorators": true,
        "lib": ["es2015", "scripthost", "es2015.promise", "es2015.generator", "es2015.iterable", "dom"],
        "module": "ES6",
        "moduleResolution": "node",
        "noImplicitAny": false,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "sourceMap": false,
        "inlineSourceMap": true,
        "outDir": "dist",
        "strict": false,
        "jsx": "react",
        "target": "es5",
        "declaration": true,
        "declarationDir": "dist/types",
        "baseUrl": "./",
        "paths": {
            "@components/*": ["src/components/*"],
            "@utils/*": ["src/utils/*"],
            "@colors/*": ["src/Colors/*"]
        }
    },
    "include": ["src/**/*"],
    "exclude": [
        "node_modules",
        "components",
        "**/*.spec.ts",
    ],
}
